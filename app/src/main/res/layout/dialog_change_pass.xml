<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Change Password:"
        android:layout_marginBottom="2dp"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="2dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_change_pass_oldPass"
        android:maxLines="1"
        android:hint="Current password"
        android:inputType="textPassword"
        android:fontFamily="Roboto"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_change_pass_newPass1"
        android:maxLines="1"
        android:hint="New password"
        android:inputType="textPassword"
        android:fontFamily="Roboto"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_change_pass_newPass2"
        android:maxLines="1"
        android:hint="Retype"
        android:inputType="textPassword"
        android:fontFamily="Roboto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fields cannot be blank."
        android:id="@+id/dialog_change_pass_error"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/setup_submit_disabled"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/dialog_change_pass_ok"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/dialog_change_pass_cancel"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>